{% endstyle %}<custom-section-{{ ai_gen_id }} class="ai-custom-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-custom-section__content-{{ ai_gen_id }}">
    <div class="ai-custom-section__columns-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign svg_key = 'column_' | append: i | append: '_svg'
          assign title_key = 'column_' | append: i | append: '_title'
          assign popup_title_key = 'column_' | append: i | append: '_popup_title'
          assign popup_text_key = 'column_' | append: i | append: '_popup_text'
          assign svg_image = block.settings[svg_key]
          assign column_title = block.settings[title_key]
          assign popup_title = block.settings[popup_title_key]
          assign popup_text = block.settings[popup_text_key]
        %}
        
        <div class="ai-custom-section__column-{{ ai_gen_id }}">
          <button
            class="ai-custom-section__svg-button-{{ ai_gen_id }}"
            data-modal-trigger="{{ i }}"
            aria-label="Open details for {{ column_title | default: 'Column ' | append: i }}"
          >
            {% if svg_image %}
              <img
                src="{{ svg_image | image_url: width: 200 }}"
                alt="{{ column_title | escape }}"
                loading="lazy"
                width="200"
                height="200"
              >
            {% else %}
              <div class="ai-custom-section__svg-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </button>
          {% if column_title != blank %}
            <h3 class="ai-custom-section__column-title-{{ ai_gen_id }}">{{ column_title }}</h3>
          {% endif %}
        </div><div class="ai-custom-section__modal-overlay-{{ ai_gen_id }}" data-modal="{{ i }}">
          <div class="ai-custom-section__modal-{{ ai_gen_id }}">
            <button class="ai-custom-section__modal-close-{{ ai_gen_id }}" aria-label="Close modal">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>
            <div class="ai-custom-section__modal-content-{{ ai_gen_id }}">
              {% if popup_title != blank %}
                <h2 class="ai-custom-section__modal-title-{{ ai_gen_id }}">{{ popup_title }}</h2>
              {% endif %}
              {% if popup_text != blank %}
                <div class="ai-custom-section__modal-text-{{ ai_gen_id }}">{{ popup_text }}</div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</custom-section-{{ ai_gen_id }}>

<script>
  (function() {
    class CustomSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.modalTriggers = this.querySelectorAll('[data-modal-trigger]');
        this.modals = this.querySelectorAll('.ai-custom-section__modal-overlay-{{ ai_gen_id }}');
        this.closeButtons = this.querySelectorAll('.ai-custom-section__modal-close-{{ ai_gen_id }}');
        
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.modalTriggers.forEach((trigger) => {
          trigger.addEventListener('click', (e) => {
            const modalId = trigger.getAttribute('data-modal-trigger');
            const modal = this.querySelector(`[data-modal="${modalId}"]`);
            if (modal) {
              this.openModal(modal);
            }
          });
        });

        this.closeButtons.forEach((closeBtn) => {
          closeBtn.addEventListener('click', (e) => {
            const modal = closeBtn.closest('.ai-custom-section__modal-overlay-{{ ai_gen_id }}');
            this.closeModal(modal);
          });
        });

        this.modals.forEach((modal) => {
          modal.addEventListener('click', (e) => {
            if (e.target === modal) {
              this.closeModal(modal);
            }
          });
        });document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape') {
            const activeModal = this.querySelector('.ai-custom-section__modal-overlay-{{ ai_gen_id }}.active');
            if (activeModal) {
              this.closeModal(activeModal);
            }
          }
        });
      }

      openModal(modal) {
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
        const closeButton = modal.querySelector('.ai-custom-section__modal-close-{{ ai_gen_id }}');
        if (closeButton) {
          closeButton.focus();
        }
      }

      closeModal(modal) {
        modal.classList.remove('active');
        document.body.style.overflow = '';
        
        const modalId = modal.getAttribute('data-modal');
        const trigger = this.querySelector(`[data-modal-trigger="${modalId}"]`);
        if (trigger) {
          trigger.focus();
        }
      }
    }

    customElements.define('custom-section-{{ ai_gen_id }}', CustomSection{{ ai_gen_id }});
  })();
</script>

