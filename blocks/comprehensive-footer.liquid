<footer class="ai-footer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-footer-container-{{ ai_gen_id }}">
    <div class="ai-footer-main-{{ ai_gen_id }}">
      <div class="ai-footer-left-section-{{ ai_gen_id }}">
        {% if block.settings.show_newsletter %}
          <div class="ai-footer-newsletter-{{ ai_gen_id }}">
            <div class="ai-footer-newsletter-header-{{ ai_gen_id }}{% if block.settings.newsletter_logo_mobile_alignment == 'center' %} ai-footer-newsletter-header--mobile-center{% endif %}">
              {% if block.settings.newsletter_logo %}
                <img
                  src="{{ block.settings.newsletter_logo | image_url: width: 200}}"
                  alt="Newsletter"
                  class="ai-footer-newsletter-logo-{{ ai_gen_id }}"
                  loading="lazy"
                >
              {% else %}
                <div class="ai-footer-newsletter-logo-placeholder-{{ ai_gen_id }}">
                  {{'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
              {% if block.settings.newsletter_copy != blank %}
                <p class="ai-footer-newsletter-copy-{{ ai_gen_id }}">
                  {{ block.settings.newsletter_copy }}
                </p>
              {% endif %}
            </div>
            {% form 'customer' %}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="ai-footer-newsletter-form-{{ ai_gen_id }}">
                <div class="ai-footer-newsletter-grid-{{ ai_gen_id }}">
                  <label class="ai-footer-newsletter-label-{{ ai_gen_id }}" for="newsletter-email-{{ ai_gen_id }}">
                    {{ block.settings.newsletter_label }}
                  </label>
                  <div class="ai-footer-newsletter-input-wrapper-{{ ai_gen_id }}">
                    <input
                      type="email"
                      id="newsletter-email-{{ ai_gen_id }}"
                      name="contact[email]"
                      class="ai-footer-newsletter-input-{{ ai_gen_id }}"
                      placeholder="{{ block.settings.newsletter_placeholder }}"
                      value="{{ form.email }}"
                      required
                      aria-label="Email address"
                      {% if form.errors %}
                        aria-invalid="true"
                        aria-describedby="newsletter-error-{{ ai_gen_id }}"
                      {% endif %}
                      {% if form.posted_successfully? %}
                        aria-describedby="newsletter-success-{{ ai_gen_id }}"
                      {% endif %}
                    >
                  </div>
                </div>
                <button
                  type="submit"
                  class="ai-footer-newsletter-button-{{ ai_gen_id }}"
                >
                  {{ block.settings.newsletter_button_text }}
                </button>
                {% if form.posted_successfully? %}
                  <div id="newsletter-success-{{ ai_gen_id }}" class="ai-footer-newsletter-success-{{ ai_gen_id }}">
                    {{ block.settings.success_message }}
                  </div>
                {% endif %}
                {% if form.errors %}
                  <div id="newsletter-error-{{ ai_gen_id }}" class="ai-footer-newsletter-error-{{ ai_gen_id }}">
                    {{ form.errors.messages.email }}
                  </div>
                {% endif %}
              </div>
            {% endform %}
          </div>
        {% endif %}
      </div>

