    font-family: 'Cormorant', serif;
    font-size: {{ block.settings.newsletter_label_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0;
    padding: 0 16px;
    background-color: {{ block.settings.label_background_color }};
    border-right: 1px solid {{ block.settings.input_border_color }};
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 100%;
    box-sizing: border-box;
  }

  .ai-footer-newsletter-input-wrapper-{{ ai_gen_id }} {
    height: 100%;
    display: flex;
    align-items: center;
    background-color: {{ block.settings.input_background_color }};
    padding: 0;}

  .ai-footer-newsletter-input-{{ ai_gen_id }} {
    padding: 0 16px;
    border: none;
    background-color: transparent;
    color: {{ block.settings.input_text_color }};
    font-family: 'Cormorant', serif;
    font-size: 16px;
    width: 100%;
    height: 100%;
    outline: none;
    box-sizing: border-box;
    display: flex;
    align-items: center;
  }

  .ai-footer-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
    font-family: 'Cormorant', serif;
  }

  .ai-footer-newsletter-button-{{ ai_gen_id }} {
    padding: 0 24px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: 0 0 {{ block.settings.button_border_radius }}px {{ block.settings.button_border_radius }}px;
    font-family: 'Cormorant', serif;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    width: 100%;
    margin-top: 0;
    margin-right: 0;
    height: {{ block.settings.button_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;box-sizing: border-box;
  }

  .ai-footer-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-footer-newsletter-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    font-family: 'Cormorant', serif;
    font-size:14px;
