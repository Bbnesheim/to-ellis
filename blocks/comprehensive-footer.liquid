{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    border-top: {{ block.settings.top_border_thickness }}px solid {{ block.settings.top_border_color }};
    border-bottom: {{ block.settings.bottom_border_thickness }}px solid {{ block.settings.bottom_border_color }};
  }

  .ai-footer-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-footer-main-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 0;
    margin-bottom: {{ block.settings.padding_bottom }}px;
    min-height: {{ block.settings.vertical_border_height }}px;
  }

  .ai-footer-left-section-{{ ai_gen_id }} {
    padding: 32px 32px 32px 32px;
    background-color: {{ block.settings.left_section_background }};
    display: flex;
    flex-direction: column;
    gap: 32px;
    position: relative;
    height: 100%;
    box-sizing: border-box;
  }

  .ai-footer-left-section-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: {{ block.settings.vertical_border_thickness }}px;
    height: {{ block.settings.vertical_border_height }}px;
    background-color: {{ block.settings.vertical_border_color }};
  }

  .ai-footer-right-section-{{ ai_gen_id }} {
    padding: 32px;
    background-color: {{ block.settings.nav_section_background }};
    display: flex;
    flex-direction: column;
    gap: 32px;
    height: 100%;
    box-sizing: border-box;
  }

  .ai-footer-nav-section-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 24px;
    flex-grow: 1;
  }

  .ai-footer-payment-section-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
    padding: {{ block.settings.payment_section_padding_vertical }}px {{ block.settings.payment_section_padding_horizontal }}px;
  }

  .ai-footer-newsletter-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
    flex-grow: 1;
    justify-content: flex-start;
  }

  .ai-footer-newsletter-header-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 8px;
  }

  .ai-footer-newsletter-logo-{{ ai_gen_id }} {
    width: {{ block.settings.newsletter_logo_size }}px;
    height: {{ block.settings.newsletter_logo_size }}px;
    object-fit: contain;
    flex-shrink: 0;
  }

  .ai-footer-newsletter-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.newsletter_logo_size }}px;
    height: {{ block.settings.newsletter_logo_size }}px;
    background-color: rgba(18, 24, 38, 0.1);
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .ai-footer-newsletter-logo-placeholder-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
    opacity: 0.5;
  }

  .ai-footer-newsletter-copy-{{ ai_gen_id }} {
    font-family: 'Cormorant', serif;
    font-size: {{ block.settings.newsletter_copy_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.3;
    margin: 0;
  }

  .ai-footer-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-right: -32px;
    margin-left: 0;
    padding-right: 0;
    margin-top: auto;
  }

