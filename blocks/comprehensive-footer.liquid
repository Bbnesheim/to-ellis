    display: grid;
    grid-template-columns: 1fr 2fr;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px {{ block.settings.input_border_radius }}px 0 0;
    overflow: hidden;
