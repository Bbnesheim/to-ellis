{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  {{ block.settings.heading_font | font_face: font_display: 'swap' }}
  {{ block.settings.body_font | font_face: font_display: 'swap' }}

  .ai-journal-book-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.page_padding }}px;
    background-color: {{ block.settings.background_color }};
    background-image: {{ block.settings.background_gradient }};
    min-height: 100vh;
    position: relative;
    perspective: 1000px;
  }

  .ai-journal-book-background-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 0;
    overflow: hidden;
    {% if block.settings.background_image %}
      background-image: url('{{ block.settings.background_image | image_url: width: 2400 }}');
      background-repeat: no-repeat;
      background-size: {{ block.settings.background_size }};
      background-position: {{ block.settings.background_position_x }}% {{ block.settings.background_position_y }}%;
      background-attachment: {{ block.settings.background_attachment }};
      opacity: {{ block.settings.background_image_opacity | divided_by: 100.0 }};
      {% if block.settings.background_blur > 0 %}
        filter: blur({{ block.settings.background_blur }}px);
      {% endif %}
      {% if block.settings.background_scale != 100 %}
        transform: scale({{ block.settings.background_scale | divided_by: 100.0 }});
      {% endif %}
      transition: all 0.3s ease;
    {% else %}
      background-color: #f4f4f4;
      background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23e0e0e0' fill-opacity='0.3'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    {% endif %}
  }

  .ai-journal-book-background-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #999;
    font-size: 14px;
    z-index: 1;
  }

  .ai-journal-book-background-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    margin-bottom: 10px;
    opacity: 0.5;
  }

  .ai-journal-book-wrapper-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    transform-style: preserve-3d;
    {% if block.settings.enable_animation %}
      animation: ai-journal-book-entrance-{{ ai_gen_id }} {{ block.settings.animation_duration }}s {{ block.settings.animation_easing }} {{ block.settings.animation_delay }}s both;
    {% endif %}
  }

  .ai-journal-book-content-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.content_background }};
    padding: {{ block.settings.content_padding }}px;
    border-radius: {{ block.settings.content_border_radius }}px;
    transform-style: preserve-3d;
    {% if block.settings.content_shadow %}
      box-shadow: 
        0 4px 20px rgba(0, 0, 0, 0.1),
        0 1px 3px rgba(0, 0, 0, 0.05),
        inset 0 0 0 1px rgba(0, 0, 0, 0.02);
    {% endif %}
    {% if block.settings.book_spine_effect %}
      border-left: {{ block.settings.spine_width }}px solid {{ block.settings.spine_color }};
      margin-left: {{ block.settings.spine_offset }}px;
    {% endif %}
  }

  {% if block.settings.paper_texture %}
    .ai-journal-book-content-{{ ai_gen_id }}::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url('{{ block.settings.paper_texture | image_url: width: 1920 }}');
      background-repeat: repeat;
      background-size: 400px 400px;
      opacity: {{ block.settings.texture_opacity | divided_by: 100.0 }};
      pointer-events: none;
      z-index: 1;
      border-radius: {{ block.settings.content_border_radius }}px;
    }
  {% endif %}

  {% if block.settings.page_lines %}
    .ai-journal-book-content-{{ ai_gen_id }}::after {
      content: '';
      position: absolute;
      top: {{ block.settings.content_padding }}px;
      left: {{ block.settings.content_padding }}px;
      right: {{ block.settings.content_padding }}px;
      bottom: {{ block.settings.content_padding }}px;
      background-image: repeating-linear-gradient(
        transparent,
        transparent {{ block.settings.line_spacing | minus: 1 }}px,
        {{ block.settings.line_color }} {{ block.settings.line_spacing | minus: 1 }}px,
        {{ block.settings.line_color }} {{ block.settings.line_spacing }}px
      );
      opacity: {{ block.settings.line_opacity | divided_by: 100.0 }};
      pointer-events: none;
      z-index: 1;
      border-radius: {{ block.settings.content_border_radius }}px;
    }
  {% endif %}

  .ai-journal-book-inner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    {% if block.settings.enable_animation %}
      opacity: 0;
      animation: ai-journal-book-content-fade-{{ ai_gen_id }} {{ block.settings.content_animation_duration }}s ease-out {{ block.settings.animation_delay | plus: block.settings.animation_duration | times: 0.7 }}s both;
    {% endif %}
  }

  .ai-journal-book-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.header_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
    padding-bottom: {{ block.settings.header_spacing | divided_by: 2 }}px;
    {% if block.settings.show_header_border %}
      border-bottom: 1px solid {{ block.settings.border_color }};
    {% endif %}
    {% if block.settings.enable_animation %}
      transform: translateY(20px);
      opacity: 0;
      animation: ai-journal-book-slide-up-{{ ai_gen_id }} {{ block.settings.element_animation_duration }}s ease-out {{ block.settings.animation_delay | plus: block.settings.animation_duration }}s both;
    {% endif %}
  }

  .ai-journal-book-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-journal-book-date-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-style: italic;
    font-size: {{ block.settings.date_size }}px;
    color: {{ block.settings.date_color }};
    margin-bottom: {{ block.settings.date_spacing }}px;
  }

  .ai-journal-book-excerpt-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-style: italic;
    font-size: {{ block.settings.excerpt_size }}px;
    color: {{ block.settings.excerpt_color }};
    line-height: {{ block.settings.line_height | divided_by: 100.0 }};
    margin-bottom: {{ block.settings.excerpt_spacing }}px;
  }

  .ai-journal-book-text-block-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-style: {{ block.settings.body_font.style }};
    font-size: {{ block.settings.body_size }}px;
    color: {{ block.settings.body_color }};
    line-height: {{ block.settings.line_height | divided_by: 100.0 }};
    margin-bottom: {{ block.settings.paragraph_spacing }}px;
    {% if block.settings.enable_animation %}
      transform: translateY(30px);
      opacity: 0;
    {% endif %}
  }

  {% if block.settings.enable_animation %}
    {% for i in (1..5) %}
      .ai-journal-book-text-block-{{ ai_gen_id }}:nth-child({{ i | plus: 2 }}) {
        animation: ai-journal-book-slide-up-{{ ai_gen_id }} {{ block.settings.element_animation_duration }}s ease-out {{ block.settings.animation_delay | plus: block.settings.animation_duration | plus: i | times: block.settings.stagger_delay }}s both;
      }
    {% endfor %}
  {% endif %}

  .ai-journal-book-text-block-{{ ai_gen_id }}.text-left {
    text-align: left;
  }

  .ai-journal-book-text-block-{{ ai_gen_id }}.text-center {
    text-align: center;
  }

  .ai-journal-book-text-block-{{ ai_gen_id }}.text-right {
    text-align: right;
  }

  .ai-journal-book-text-block-{{ ai_gen_id }} p {
    margin-bottom: {{ block.settings.paragraph_spacing }}px;
  }

  .ai-journal-book-text-block-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-journal-book-signature-{{ ai_gen_id }} {
    margin-top: {{ block.settings.signature_spacing }}px;
    text-align: {{ block.settings.signature_alignment }};
    {% if block.settings.show_signature_border %}
      border-top: 1px solid {{ block.settings.border_color }};
      padding-top: {{ block.settings.signature_spacing | divided_by: 2 }}px;
    {% endif %}
    {% if block.settings.enable_animation %}
      transform: translateY(20px);
      opacity: 0;
      animation: ai-journal-book-slide-up-{{ ai_gen_id }} {{ block.settings.element_animation_duration }}s ease-out {{ block.settings.animation_delay | plus: block.settings.animation_duration | plus: 6 | times: block.settings.stagger_delay }}s both;
    {% endif %}
  }

  .ai-journal-book-signature-content-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: {{ block.settings.signature_logo_spacing }}px;
    {% if block.settings.signature_alignment == 'left' %}
      flex-direction: row;
    {% elsif block.settings.signature_alignment == 'right' %}
      flex-direction: row-reverse;
    {% else %}
      flex-direction: column;
    {% endif %}
  }

  .ai-journal-book-signature-text-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    font-size: {{ block.settings.signature_size }}px;
    color: {{ block.settings.signature_color }};
    margin: 0;
  }

  .ai-journal-book-signature-logo-{{ ai_gen_id }} {
    width: {{ block.settings.signature_logo_size }}px;
    height: auto;
    flex-shrink: 0;
  }

  .ai-journal-book-signature-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.signature_logo_size }}px;
    height: {{ block.settings.signature_logo_size | divided_by: 2 }}px;
    background-color: #f4f4f4;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    flex-shrink: 0;
  }

  .ai-journal-book-signature-logo-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    color: {{ block.settings.border_color }};
  }

  .ai-journal-book-signature-logo-placeholder-{{ ai_gen_id }}::after {
    content: "Add signature logo";
    position: absolute;
    bottom: -18px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 10px;
    color: #999;
    white-space: nowrap;
  }

  .ai-journal-book-decorative-{{ ai_gen_id }} {
    text-align: center;
    margin: {{ block.settings.decorative_spacing }}px 0;
    {% if block.settings.enable_animation %}
      transform: scale(0.8);
      opacity: 0;
      animation: ai-journal-book-scale-in-{{ ai_gen_id }} {{ block.settings.element_animation_duration }}s ease-out {{ block.settings.animation_delay | plus: block.settings.animation_duration | plus: 3 | times: block.settings.stagger_delay }}s both;
    {% endif %}
  }

  .ai-journal-book-decorative-{{ ai_gen_id }} img {
    max-width: {{ block.settings.decorative_size }}px;
    height: auto;
    opacity: {{ block.settings.decorative_opacity | divided_by: 100.0 }};
  }

  .ai-journal-book-decorative-placeholder-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.decorative_size }}px;
    height: 40px;
    margin: 0 auto;
    opacity: {{ block.settings.decorative_opacity | divided_by: 100.0 }};
    background-color: #f4f4f4;
    border-radius: 4px;
    position: relative;
  }

  .ai-journal-book-decorative-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    color: {{ block.settings.border_color }};
  }

  .ai-journal-book-decorative-placeholder-{{ ai_gen_id }}::after {
    content: "Add decorative element";
    position: absolute;
    bottom: -20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #999;
    white-space: nowrap;
  }

  {% if block.settings.enable_animation %}
    @keyframes ai-journal-book-entrance-{{ ai_gen_id }} {
      0% {
        transform: rotateY(-15deg) rotateX(5deg) translateZ(-50px);
        opacity: 0;
      }
      100% {
        transform: rotateY(0deg) rotateX(0deg) translateZ(0px);
        opacity: 1;
      }
    }

    @keyframes ai-journal-book-content-fade-{{ ai_gen_id }} {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }

    @keyframes ai-journal-book-slide-up-{{ ai_gen_id }} {
      0% {
        transform: translateY(30px);
        opacity: 0;
      }
      100% {
        transform: translateY(0);
        opacity: 1;
      }
    }

    @keyframes ai-journal-book-scale-in-{{ ai_gen_id }} {
      0% {
        transform: scale(0.8);
        opacity: 0;
      }
      100% {
        transform: scale(1);
        opacity: 1;
      }
    }

    {% if block.settings.animation_type == 'page_turn' %}
      @keyframes ai-journal-book-entrance-{{ ai_gen_id }} {
        0% {
          transform: rotateY(-180deg) rotateX(10deg);
          opacity: 0;
        }
        50% {
          transform: rotateY(-90deg) rotateX(5deg);
          opacity: 0.5;
        }
        100% {
          transform: rotateY(0deg) rotateX(0deg);
          opacity: 1;
        }
      }
    {% elsif block.settings.animation_type == 'book_open' %}
      @keyframes ai-journal-book-entrance-{{ ai_gen_id }} {
        0% {
          transform: rotateX(-90deg) scale(0.8);
          opacity: 0;
        }
        50% {
          transform: rotateX(-45deg) scale(0.9);
          opacity: 0.7;
        }
        100% {
          transform: rotateX(0deg) scale(1);
          opacity: 1;
        }
      }
    {% elsif block.settings.animation_type == 'fade_in' %}
      @keyframes ai-journal-book-entrance-{{ ai_gen_id }} {
        0% {
          transform: translateY(50px);
          opacity: 0;
        }
        100% {
          transform: translateY(0);
          opacity: 1;
        }
      }
    {% elsif block.settings.animation_type == 'typewriter' %}
      .ai-journal-book-text-block-{{ ai_gen_id }} {
        overflow: hidden;
        border-right: 2px solid {{ block.settings.body_color }};
        white-space: nowrap;
        animation: 
          ai-journal-book-typing-{{ ai_gen_id }} {{ block.settings.typing_duration }}s steps(40, end),
          ai-journal-book-blink-caret-{{ ai_gen_id }} 0.75s step-end infinite;
      }

      @keyframes ai-journal-book-typing-{{ ai_gen_id }} {
        from { width: 0; }
        to { width: 100%; }
      }

      @keyframes ai-journal-book-blink-caret-{{ ai_gen_id }} {
        from, to { border-color: transparent; }
        50% { border-color: {{ block.settings.body_color }}; }
      }
    {% endif %}

    {% if block.settings.hover_effects %}
      .ai-journal-book-wrapper-{{ ai_gen_id }}:hover {
        transform: rotateY(2deg) rotateX(1deg) translateZ(10px);
        transition: transform 0.3s ease;
      }

      .ai-journal-book-content-{{ ai_gen_id }}:hover {
        box-shadow: 
          0 8px 30px rgba(0, 0, 0, 0.15),
          0 2px 6px rgba(0, 0, 0, 0.08),
          inset 0 0 0 1px rgba(0, 0, 0, 0.03);
        transition: box-shadow 0.3s ease;
      }
    {% endif %}
  {% endif %}

  @media screen and (max-width: 768px) {
    .ai-journal-book-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding }}px;
    }

    .ai-journal-book-content-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_content_padding }}px;
    }

    .ai-journal-book-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_title_size }}px;
    }

    .ai-journal-book-excerpt-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_excerpt_size }}px;
    }

    .ai-journal-book-text-block-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_body_size }}px;
    }

    .ai-journal-book-signature-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_signature_size }}px;
    }

    .ai-journal-book-signature-content-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.signature_logo_spacing | divided_by: 2 }}px;
    }

    .ai-journal-book-signature-logo-{{ ai_gen_id }},
    .ai-journal-book-signature-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.signature_logo_size | times: 0.8 }}px;
    }

    .ai-journal-book-signature-logo-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.signature_logo_size | times: 0.8 | divided_by: 2 }}px;
    }

    {% if block.settings.enable_animation %}
      .ai-journal-book-wrapper-{{ ai_gen_id }} {
        animation-duration: {{ block.settings.animation_duration | times: 0.8 }}s;
      }
    {% endif %}
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-journal-book-wrapper-{{ ai_gen_id }},
    .ai-journal-book-inner-content-{{ ai_gen_id }},
    .ai-journal-book-header-{{ ai_gen_id }},
    .ai-journal-book-text-block-{{ ai_gen_id }},
    .ai-journal-book-signature-{{ ai_gen_id }},
    .ai-journal-book-decorative-{{ ai_gen_id }} {
      animation: none !important;
      transform: none !important;
      opacity: 1 !important;
    }
  }
{% endstyle %}

<div class="ai-journal-book-background-{{ ai_gen_id }}">
  {% unless block.settings.background_image %}
    <div class="ai-journal-book-background-placeholder-{{ ai_gen_id }}">
      {{ 'image' | placeholder_svg_tag }}
      <div>Add background image</div>
    </div>
  {% endunless %}
</div>

<article class="ai-journal-book-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
