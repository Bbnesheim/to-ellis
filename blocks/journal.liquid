          </div>
        {% endif %}

        {% if block.settings.text_block_2 != blank %}
          <div class="ai-journal-book-text-block-{{ ai_gen_id }} text-{{ block.settings.text_2_alignment }}">
            {{ block.settings.text_block_2 }}
          </div>
        {% endif %}

        {% if block.settings.text_block_3 != blank %}
          <div class="ai-journal-book-text-block-{{ ai_gen_id }} text-{{ block.settings.text_3_alignment }}">
            {{ block.settings.text_block_3 }}
          </div>
        {% endif %}

        {% if block.settings.text_block_4 != blank %}
          <div class="ai-journal-book-text-block-{{ ai_gen_id }} text-{{ block.settings.text_4_alignment }}">
            {{ block.settings.text_block_4 }}
          </div>
        {% endif %}

        {% if block.settings.text_block_5 != blank %}
          <div class="ai-journal-book-text-block-{{ ai_gen_id }} text-{{ block.settings.text_5_alignment }}">
            {{ block.settings.text_block_5 }}
          </div>
        {% endif %}

        {% if block.settings.show_decorative_bottom %}
          <div class="ai-journal-book-decorative-{{ ai_gen_id }}">
            {% if block.settings.decorative_element %}
              <img
                src="{{ block.settings.decorative_element | image_url: width: 400 }}"
                alt="Decorative element"
                loading="lazy"
              >
            {% else %}
              <div class="ai-journal-book-decorative-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        {% endif %}

        <footer class="ai-journal-book-signature-{{ ai_gen_id }}">
          <div class="ai-journal-book-signature-content-{{ ai_gen_id }}">
            {% if block.settings.signature_text != blank %}
              <p class="ai-journal-book-signature-text-{{ ai_gen_id }}">{{ block.settings.signature_text }}</p>
            {% endif %}
            
            {% if block.settings.show_signature_logo %}
              {% if block.settings.signature_logo %}
