{% doc %}
  @prompt
    Create a customizable logo banner section for the bottom of the page that includes: a logo image upload option, adjustable border settings (width, style, color), customizable background color picker, responsive design that works on all devices, and proper spacing and alignment controls. The banner should be similar to the Lacoste-style banner shown in the reference image with clean typography and professional appearance., logo should cover almost the whole page, Layout Minimum height do not work
    Increase the logo width, Custom Vertical padding
    Horizontal padding
    for mobile

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-logo-banner-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    border-top-width: {{ block.settings.border_width }}px;
    border-top-style: {{ block.settings.border_style }};
    border-top-color: {{ block.settings.border_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    display: flex;
    justify-content: {{ block.settings.alignment }};
    align-items: center;
    min-height: {{ block.settings.min_height }}px;
    box-sizing: border-box;
  }

  .ai-logo-banner__container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    width: 100%;
    display: flex;
    justify-content: {{ block.settings.alignment }};
    align-items: center;
    min-height: inherit;
  }

  .ai-logo-banner__logo-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    min-height: inherit;
  }

  .ai-logo-banner__logo-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}%;
    max-width: 100%;
    height: auto;
    display: block;
  }

  .ai-logo-banner__placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}%;
    max-width: 100%;
    min-height: {{ block.settings.min_height | minus: block.settings.padding_vertical | minus: block.settings.padding_vertical }}px;
    background-color: #f4f4f4;
    border: 2px dashed #cccccc;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    box-sizing: border-box;
  }

  .ai-logo-banner__placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.5;
  }

  .ai-logo-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: -30px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    white-space: nowrap;
  }

  @media screen and (max-width: 749px) {
    .ai-logo-banner-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical_mobile }}px {{ block.settings.padding_horizontal_mobile }}px;min-height: {{ block.settings.min_height_mobile }}px;
    }

    .ai-logo-banner__logo-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width_mobile }}%;}

    .ai-logo-banner__placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width_mobile }}%;
      min-height: {{ block.settings.min_height_mobile | minus: block.settings.padding_vertical_mobile | minus: block.settings.padding_vertical_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-logo-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-logo-banner__container-{{ ai_gen_id }}">
    <div class="ai-logo-banner__logo-wrapper-{{ ai_gen_id }}">
      {% if block.settings.logo %}
        <img
          src="{{ block.settings.logo | image_url: width: 2000 }}"
          alt="{{ block.settings.logo.alt | default: shop.name | escape }}"
          class="ai-logo-banner__logo-{{ ai_gen_id }}"
          width="{{ block.settings.logo.width }}"
          height="{{ block.settings.logo.height }}"loading="lazy"
        >
      {% else %}
        <div class="ai-logo-banner__placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}<div class="ai-logo-banner__empty-state-{{ ai_gen_id }}">
            Add your logo
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

