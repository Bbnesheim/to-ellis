{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .contact-support-{{ section.id }} {
    max-width: 960px;
    margin: 0 auto;
    border-radius: 24px;
    padding: 32px 32px 36px;
    background: rgba(var(--color-background), 1);
    box-shadow: 0 18px 50px rgba(15, 23, 42, 0.10);
    border: 1px solid rgba(129, 140, 248, 0.45);
  }

  .contact-support-{{ section.id }} .field__input,
  .contact-support-{{ section.id }} .text-area.field__input {
    border-radius: 999px;
    background: #ffffff;
    border: 1px solid rgba(148, 163, 184, 0.6);
    box-shadow: 0 8px 24px rgba(15, 23, 42, 0.06);
    transition: box-shadow 150ms ease, border-color 150ms ease, background-color 150ms ease;
  }

  .contact-support-{{ section.id }} .text-area.field__input {
    border-radius: 18px;
  }

  .contact-support-{{ section.id }} .field__input:focus,
  .contact-support-{{ section.id }} .text-area.field__input:focus {
    outline: none;
    border-color: rgba(129, 140, 248, 0.9);
    box-shadow: 0 0 0 2px rgba(129, 140, 248, 0.55), 0 16px 40px rgba(15, 23, 42, 0.14);
    background: #ffffff;
  }

  .contact-support-{{ section.id }} .select,
  .contact-support-{{ section.id }} .select::before,
  .contact-support-{{ section.id }} .select::after {
    border-radius: 999px;
    overflow: hidden;
    background: transparent !important;
    border: none !important;
    box-shadow: none !important;
    padding: 0;
  }

  .contact-support-{{ section.id }} .select select.field__input {
    background: #ffffff;
    border-radius: 999px;
    border: 1px solid rgba(148, 163, 184, 0.6);
    box-shadow: 0 8px 24px rgba(15, 23, 42, 0.06);
    padding-left: 16px;
    padding-right: 36px;
    padding-top: 10px;
    padding-bottom: 10px;
    height: auto;
    line-height: 1.4;
  }

  .contact-support__header-{{ section.id }} {
    text-align: center;
    margin-bottom: 24px;
  }

  .contact-support__title-{{ section.id }} {
    margin: 0 0 8px;
  }

  .contact-support__subtext-{{ section.id }} {
    margin: 0;
    font-size: 1.4rem;
  }

  .contact-support__fields-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 16px 24px;
    margin-bottom: 16px;
  }

  .contact-support__fields-{{ section.id }} .field {
    margin-bottom: 0;
  }

  .contact-support-{{ section.id }} .field,
  .contact-support-{{ section.id }} .field::before,
  .contact-support-{{ section.id }} .field::after {
    border: none !important;
    box-shadow: none !important;
    background: transparent !important;
  }

  .contact-support__field-full-{{ section.id }} {
    grid-column: 1 / -1;
  }

.contact-support-{{ section.id }} .contact__button .button {
  background-color: #8a9bb7;
  border-color: #8a9bb7;
  color: #ffffff;
  border-radius: 999px;
  padding-inline: 36px;
}

  .contact-support-{{ section.id }} .contact__button .button:hover,
  .contact-support-{{ section.id }} .contact__button .button:focus-visible {
    background-color: #7587a7;
    border-color: #7587a7;
    color: #ffffff;
  }

  @media screen and (max-width: 989px) {
    .contact-support-{{ section.id }} {
      padding: 24px 20px 28px;
      border-radius: 20px;
    }

    .contact-support__fields-{{ section.id }} {
      gap: 14px 16px;
    }
  }

  @media screen and (max-width: 749px) {
    .contact-support-{{ section.id }} {
      padding: 20px 16px 24px;
      border-radius: 18px;
    }

    .contact-support__fields-{{ section.id }} {
      grid-template-columns: 1fr;
    }

    .contact-support__field-full-{{ section.id }} {
      grid-column: 1 / -1;
    }
  }
{% endstyle %}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="contact-support-{{ section.id }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="contact-support__header-{{ section.id }}">
        <h2 class="title contact-support__title-{{ section.id }} inline-richtext {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="contact-support__subtext-{{ section.id }} rte">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>

      {%- liquid
        assign contact_form_class = 'isolate contact-support__form'
        if settings.animations_reveal_on_scroll
          assign contact_form_class = 'isolate contact-support__form scroll-trigger animate--slide-in'
        endif
      -%}

      {%- form 'contact', id: 'SupportContactForm', class: contact_form_class -%}
        {%- if form.posted_successfully? -%}
          <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
            {{- 'icon-success.svg' | inline_asset_content -}}
            {{ 'templates.contact.form.post_success' | t }}
          </h2>
        {%- elsif form.errors -%}
          <div class="form__message">
            <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
              {{- 'icon-error.svg' | inline_asset_content -}}
              {{ 'templates.contact.form.error_heading' | t }}
            </h2>
          </div>
          <ul class="form-status-list caption-large" role="list">
            <li>
              <a href="#SupportContactForm-email" class="link">
                {{ form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email }}
              </a>
            </li>
          </ul>
        {%- endif -%}

        <div class="contact-support__fields-{{ section.id }}">
          <div class="field">
            <input
              class="field__input"
              autocomplete="name"
              type="text"
              id="SupportContactForm-name"
              name="contact[Navn]"
              value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
              placeholder="{{ 'templates.contact.form.name' | t }}"
            >
            <label class="field__label" for="SupportContactForm-name">{{ 'templates.contact.form.name' | t }}</label>
          </div>

          <div class="field field--with-error">
            <input
              autocomplete="email"
              type="email"
              id="SupportContactForm-email"
              class="field__input"
              name="contact[email]"
              spellcheck="false"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="SupportContactForm-email-error"
              {% endif %}
              placeholder="{{ 'templates.contact.form.email' | t }}"
            >
            <label class="field__label" for="SupportContactForm-email">
              {{- 'templates.contact.form.email' | t }}
              <span aria-hidden="true">*</span>
            </label>
            {%- if form.errors contains 'email' -%}
              <small class="contact__field-error" id="SupportContactForm-email-error">
                <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                <span class="form__message">
                  <span class="svg-wrapper">
                    {{- 'icon-error.svg' | inline_asset_content -}}
                  </span>
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </span>
              </small>
            {%- endif -%}
          </div>

          <div class="field">
            <input
              type="text"
              id="SupportContactForm-order"
              class="field__input"
              name="contact[Ordrenummer]"
              placeholder="{{ section.settings.order_placeholder }}"
            >
            <label class="field__label" for="SupportContactForm-order">{{ section.settings.order_label }}</label>
          </div>

          <div class="field">
            <div class="select">
              <select
                id="SupportContactForm-topic"
                class="field__input"
                name="contact[Emne]"
              >
                <option value="" disabled selected>{{ section.settings.topic_placeholder }}</option>
                <option value="Retur">{{ section.settings.topic_option_return }}</option>
                <option value="Feil størrelse">{{ section.settings.topic_option_size }}</option>
                <option value="Spørsmål om levering">{{ section.settings.topic_option_shipping }}</option>
                <option value="Annet">{{ section.settings.topic_option_other }}</option>
              </select>
            </div>
            <label class="field__label" for="SupportContactForm-topic">{{ section.settings.topic_label }}</label>
          </div>

          <div class="field contact-support__field-full-{{ section.id }}">
            <textarea
              rows="8"
              id="SupportContactForm-body"
              class="text-area field__input"
              name="contact[{{ 'templates.contact.form.comment' | t }}]"
              placeholder="{{ 'templates.contact.form.comment' | t }}"
            >{{- form.body -}}</textarea>
            <label class="form__label field__label" for="SupportContactForm-body">
              {{- 'templates.contact.form.comment' | t -}}
            </label>
          </div>
        </div>

        <div class="contact__button" style="text-align: center;">
          <button type="submit" class="button">
            {{ section.settings.submit_label }}
          </button>
        </div>
      {%- endform -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Support contact form",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "SKRIV TIL OSS"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Du kan også finne svar i vår <a href=\"/pages/faq\">FAQ-side</a>.</p>"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "t:sections.all.heading_size.options__1.label" },
        { "value": "h1", "label": "t:sections.all.heading_size.options__2.label" },
        { "value": "h0", "label": "t:sections.all.heading_size.options__3.label" },
        { "value": "hxl", "label": "t:sections.all.heading_size.options__4.label" },
        { "value": "hxxl", "label": "t:sections.all.heading_size.options__5.label" }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "order_label",
      "label": "Order number label",
      "default": "Ordrenummer (valgfritt)"
    },
    {
      "type": "text",
      "id": "order_placeholder",
      "label": "Order number placeholder",
      "default": "#1001"
    },
    {
      "type": "text",
      "id": "topic_label",
      "label": "Topic label",
      "default": "Emne"
    },
    {
      "type": "text",
      "id": "topic_placeholder",
      "label": "Topic placeholder",
      "default": "Velg emne"
    },
    {
      "type": "text",
      "id": "topic_option_return",
      "label": "Topic option - return",
      "default": "Retur"
    },
    {
      "type": "text",
      "id": "topic_option_size",
      "label": "Topic option - wrong size",
      "default": "Feil størrelse"
    },
    {
      "type": "text",
      "id": "topic_option_shipping",
      "label": "Topic option - shipping",
      "default": "Spørsmål om levering"
    },
    {
      "type": "text",
      "id": "topic_option_other",
      "label": "Topic option - other",
      "default": "Annet"
    },
    {
      "type": "text",
      "id": "submit_label",
      "label": "Submit button label",
      "default": "Send melding"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Support contact form"
    }
  ]
}
{% endschema %}