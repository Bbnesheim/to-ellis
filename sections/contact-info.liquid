{% assign section_id = section.id %}

{% style %}
  .section-{{ section_id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section_id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .contact-info-{{ section_id }} {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .contact-info__header-{{ section_id }} {
    text-align: left;
  }

  .contact-info__primary-{{ section_id }} {
    margin-bottom: 24px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .contact-info__grid-{{ section_id }} {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 24px;
    max-width: 960px;
    margin-left: auto;
    margin-right: auto;
  }

  .contact-info__card-{{ section_id }} {
    position: relative;
    padding: 24px 24px 20px;
    border-radius: 18px;
    background: rgba(var(--color-background), 1);
    box-shadow: 0 18px 50px rgba(15, 23, 42, 0.10);
    border: 1px solid rgba(129, 140, 248, 0.45);
  }

  .contact-info__card-{{ section_id }}.contact-info__card--primary {
    padding: 28px 28px 24px;
  }

  .contact-info__card-{{ section_id }}.contact-info__card--secondary {
    height: 100%;
  }

  .contact-info__note-pill-{{ section_id }} {
    margin-top: 20px;
    padding: 10px 14px;
    border-radius: 999px;
    background: linear-gradient(90deg, rgba(129, 140, 248, 0.12), rgba(56, 189, 248, 0.12));
    border: 1px solid rgba(129, 140, 248, 0.35);
  }

  .contact-info__title-{{ section_id }} {
    margin: 0 0 12px;
    font-size: 2.0rem;
    font-weight: 700;
  }

  .contact-info__text-{{ section_id }} {
    margin: 0;
    font-size: 1.5rem;
    line-height: 1.5;
  }

  .contact-info__note-{{ section_id }} {
    margin: 0;
    font-size: 1.3rem;
    line-height: 1.4;
    opacity: 0.9;
  }

  .contact-info__label-{{ section_id }} {
    font-weight: 600;
  }

  @media screen and (max-width: 989px) {
    .contact-info__grid-{{ section_id }} {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media screen and (max-width: 749px) {
    .contact-info__grid-{{ section_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section_id }}-padding contact-info-{{ section_id }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"{% if settings.animations_reveal_on_scroll %} data-cascade{% endif %}>
    {%- unless section.settings.heading == blank -%}
      <div class="contact-info__header-{{ section_id }}">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
        {%- if section.settings.subheading != blank -%}
          <div class="rte">{{ section.settings.subheading }}</div>
        {%- endif -%}
      </div>
    {%- endunless -%}

    {%- assign primary_block = nil -%}

    {%- for block in section.blocks -%}
      {%- if block.type == 'kundeservice_card' -%}
        {%- assign primary_block = block -%}
        {%- break -%}
      {%- endif -%}
    {%- endfor -%}

    {%- if primary_block == nil -%}
      {%- assign primary_block = section.blocks | first -%}
    {%- endif -%}

    {%- if primary_block -%}
      <div class="contact-info__primary-{{ section_id }}">
        <div class="contact-info__card-{{ section_id }} contact-info__card--primary" {{ primary_block.shopify_attributes }}>
          {%- if primary_block.settings.title != blank -%}
            <h3 class="contact-info__title-{{ section_id }} inline-richtext">{{ primary_block.settings.title }}</h3>
          {%- endif -%}

          {%- if primary_block.settings.text != blank -%}
            <div class="contact-info__text-{{ section_id }} rte">{{ primary_block.settings.text }}</div>
          {%- endif -%}

          {%- if primary_block.settings.note != blank -%}
            <div class="contact-info__note-pill-{{ section_id }}">
              <p class="contact-info__note-{{ section_id }}">{{ primary_block.settings.note }}</p>
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 1 -%}
      <div class="contact-info__grid-{{ section_id }}">
        {%- for block in section.blocks -%}
          {%- unless block.id == primary_block.id -%}
            <div class="contact-info__card-{{ section_id }} contact-info__card--secondary" {{ block.shopify_attributes }}>
              {%- if block.settings.title != blank -%}
                <h3 class="contact-info__title-{{ section_id }} inline-richtext">{{ block.settings.title }}</h3>
              {%- endif -%}

              {%- if block.settings.text != blank -%}
                <div class="contact-info__text-{{ section_id }} rte">{{ block.settings.text }}</div>
              {%- endif -%}

              {%- if block.settings.note != blank -%}
                <p class="contact-info__note-{{ section_id }}">{{ block.settings.note }}</p>
              {%- endif -%}
            </div>
          {%- endunless -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

