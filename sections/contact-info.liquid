{% assign section_id = section.id %}

{% style %}
  .section-{{ section_id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section_id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .contact-info-{{ section_id }} {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .contact-info__header-{{ section_id }} {
    text-align: left;
  }

  .contact-info__grid-{{ section_id }} {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 24px;
  }

  .contact-info__card-{{ section_id }} {
    position: relative;
    padding: 24px 24px 20px;
    border-radius: 18px;
    background: rgba(var(--color-background), 1);
    box-shadow: 0 12px 40px rgba(15, 23, 42, 0.08);
    border: 1px solid rgba(15, 23, 42, 0.04);
  }

  .contact-info__title-{{ section_id }} {
    margin: 0 0 12px;
  }

  .contact-info__text-{{ section_id }} {
    margin: 0;
    font-size: 1.5rem;
    line-height: 1.5;
  }

  .contact-info__note-{{ section_id }} {
    margin-top: 16px;
    font-size: 1.3rem;
    line-height: 1.4;
    opacity: 0.8;
  }

  .contact-info__label-{{ section_id }} {
    font-weight: 600;
  }

  @media screen and (max-width: 989px) {
    .contact-info__grid-{{ section_id }} {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media screen and (max-width: 749px) {
    .contact-info__grid-{{ section_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section_id }}-padding contact-info-{{ section_id }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"{% if settings.animations_reveal_on_scroll %} data-cascade{% endif %}>
    {%- unless section.settings.heading == blank -%}
      <div class="contact-info__header-{{ section_id }}">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
        {%- if section.settings.subheading != blank -%}
          <div class="rte">{{ section.settings.subheading }}</div>
        {%- endif -%}
      </div>
    {%- endunless -%}

    <div class="contact-info__grid-{{ section_id }}">
      {%- for block in section.blocks -%}
        <div class="contact-info__card-{{ section_id }}" {{ block.shopify_attributes }}>
          {%- if block.settings.title != blank -%}
            <h3 class="contact-info__title-{{ section_id }} inline-richtext">{{ block.settings.title }}</h3>
          {%- endif -%}

          {%- if block.settings.text != blank -%}
            <div class="contact-info__text-{{ section_id }} rte">{{ block.settings.text }}</div>
          {%- endif -%}

          {%- if block.settings.note != blank -%}
            <p class="contact-info__note-{{ section_id }}">{{ block.settings.note }}</p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

