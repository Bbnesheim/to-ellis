  <script>
/* Desktop-only hover open for top-level <details> in the inline nav (Dawn) */
(function () {
  const DESKTOP = '(min-width: 990px)';

  const detailsList = () =>
    Array.from(document.querySelectorAll('nav.header__inline-menu details'));

  function openOnEnter(e) {
    e.currentTarget.setAttribute('open', '');
  }
  function closeOnLeave(e) {
    e.currentTarget.removeAttribute('open');
  }
  function onSummaryClick(e) {
    // On desktop we keep it hover-only, so prevent the default toggle
    if (window.matchMedia(DESKTOP).matches) e.preventDefault();
  }

  function bind(d) {
    d.addEventListener('mouseenter', openOnEnter);
    d.addEventListener('mouseleave', closeOnLeave);
    const summary = d.querySelector('summary');
    if (summary) summary.addEventListener('click', onSummaryClick);
  }
  function unbind(d) {
    d.removeEventListener('mouseenter', openOnEnter);
    d.removeEventListener('mouseleave', closeOnLeave);
    const summary = d.querySelector('summary');
    if (summary) summary.removeEventListener('click', onSummaryClick);
  }

  function enable() { detailsList().forEach(bind); }
  function disable() {
    detailsList().forEach(unbind);
    detailsList().forEach(d => d.removeAttribute('open'));
  }

  const mql = window.matchMedia(DESKTOP);
  if (mql.matches) enable();

  // respond to viewport changes
  (mql.addEventListener || mql.addListener).call(
    mql,
    'change',
    (e) => (e.matches ? enable() : disable())
  );
})();
</script>

