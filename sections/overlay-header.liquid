<script>
(function () {
  const tagName = 'header-component-{{ ai_gen_id }}';

  class AiHeaderComponent extends HTMLElement {
    connectedCallback() {
      this.mobileToggle = this.querySelector('.ai-header-mobile-toggle-{{ ai_gen_id }}');
      this.mobileMenu   = this.querySelector('.ai-header-mobile-menu-{{ ai_gen_id }}');
      this.searchToggle = this.querySelector('.ai-header-search-toggle-{{ ai_gen_id }}');
      this.searchForm   = this.querySelector('.ai-header-search-form-{{ ai_gen_id }}');
      this.mobileNavToggles = this.querySelectorAll('.ai-header-mobile-nav-toggle-{{ ai_gen_id }}');

      this.setupEventListeners();
    } /* <-- this brace was missing */

    toggleMobileMenu() {
      this.mobileMenu.classList.contains('active') ? this.closeMobileMenu() : this.openMobileMenu();
    }

    setupEventListeners() {
      if (this.mobileToggle && this.mobileMenu) {
        this.mobileToggle.addEventListener('click', () => this.toggleMobileMenu());
        // click the dim background to close
        this.mobileMenu.addEventListener('click', (e) => { if (e.target === this.mobileMenu) this.closeMobileMenu(); });
        document.addEventListener('keydown', (e) => { if (e.key === 'Escape' && this.mobileMenu.classList.contains('active')) this.closeMobileMenu(); });
      }

      if (this.searchToggle && this.searchForm) {
        this.searchToggle.addEventListener('click', () => this.searchForm.classList.toggle('active'));
        document.addEventListener('click', (e) => { if (!e.target.closest('.ai-header-search-{{ ai_gen_id }}')) this.searchForm.classList.remove('active'); });
      }

      this.mobileNavToggles.forEach(toggle =>
        toggle.addEventListener('click', () => this.toggleMobileDropdown(toggle))
      );
    }

    openMobileMenu() {
      this.mobileMenu.classList.add('active');
      this.mobileToggle.classList.add('active');
      this.mobileToggle.setAttribute('aria-expanded', 'true');
      document.body.style.overflow = 'hidden';
    }

    closeMobileMenu() {
      this.mobileMenu.classList.remove('active');
      this.mobileToggle.classList.remove('active');
      this.mobileToggle.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
      this.querySelectorAll('.ai-header-mobile-dropdown-{{ ai_gen_id }}').forEach(d => d.classList.remove('active'));
      this.querySelectorAll('.ai-header-mobile-nav-toggle-{{ ai_gen_id }}').forEach(t => t.classList.remove('active'));
    }

    toggleMobileDropdown(toggle) {
      const targetId = toggle.getAttribute('data-target');
      const dropdown = document.getElementById(targetId);
      if (!dropdown) return;

      const isActive = dropdown.classList.contains('active');
      this.querySelectorAll('.ai-header-mobile-dropdown-{{ ai_gen_id }}').forEach(d => { if (d !== dropdown) d.classList.remove('active'); });
      this.querySelectorAll('.ai-header-mobile-nav-toggle-{{ ai_gen_id }}').forEach(t => { if (t !== toggle) t.classList.remove('active'); });

      dropdown.classList.toggle('active', !isActive);
      toggle.classList.toggle('active', !isActive);
    }
  }

  if (!customElements.get(tagName)) {
    customElements.define(tagName, AiHeaderComponent);
  }
})();
</script>

