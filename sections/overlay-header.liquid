{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% style %}
  {{ section.settings.desktop_font | font_face }}
  {{ section.settings.mobile_font  | font_face }}

  /* replace your current .ai-header-{{ ai_gen_id }} rule with this */

  /* Ensure the custom element paints a full-width box */
  .ai-header-{{ ai_gen_id }}{
    display: block;
    width: 100%;
    background-color: {{ section.settings.header_bar_color }} !important;
  }

  /* Kill Dawn’s wrapper background just for this section */
  #shopify-section-{{ section.id }}{
    background: transparent !important;
    background-color: transparent !important;
  }

  .ai-header-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    padding: 0 20px;
  }

  .ai-header-logo-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: {{ section.settings.text_color }};
    z-index: 1001;
    transition: transform 0.3s ease;
    padding: {{ section.settings.logo_padding }}px;
  }

  .ai-header-logo-{{ ai_gen_id }}:hover { transform: scale(1.05); }

  .ai-header-logo-image-{{ ai_gen_id }} {
    max-width: {{ section.settings.logo_width }}px;
    height: auto;
    transition: opacity 0.3s ease;
  }

  .ai-header-logo-{{ ai_gen_id }}:hover .ai-header-logo-image-{{ ai_gen_id }} { opacity: 0.8; }

  .ai-header-logo-text-{{ ai_gen_id }} {
    font-size: {{ section.settings.logo_text_size }}px;
    font-weight: {{ section.settings.logo_text_weight }};
    font-family: {{ section.settings.desktop_font.family }}, {{ section.settings.desktop_font.fallback_families }};
    margin: 0;
    transition: color 0.3s ease;
  }

  .ai-header-logo-{{ ai_gen_id }}:hover .ai-header-logo-text-{{ ai_gen_id }} {
    color: {{ section.settings.text_hover_color }};
  }

  .ai-header-nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: {{ section.settings.nav_spacing }}px;
  }

  .ai-header-nav-item-{{ ai_gen_id }} { position: relative; }

  .ai-header-nav-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.nav_text_size }}px;
    font-weight: {{ section.settings.nav_text_weight }};
    font-family: {{ section.settings.desktop_font.family }}, {{ section.settings.desktop_font.fallback_families }};
    padding: {{ section.settings.menu_padding_top }}px 16px 12px 16px;
    transition: all 0.3s ease;
    display: block;
    position: relative;
    border-radius: 4px;
  }

  .ai-header-nav-link-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    bottom: 0; left: 50%;
    width: 0; height: 2px;
    background-color: {{ section.settings.text_hover_color }};
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  .ai-header-nav-link-{{ ai_gen_id }}:hover {
    color: {{ section.settings.text_hover_color }};
    background-color: rgba(0,0,0,0.05);
    transform: translateY(-2px);
  }
  .ai-header-nav-link-{{ ai_gen_id }}:hover::after { width: 80%; }

  .ai-header-nav-item-{{ ai_gen_id }}:hover .ai-header-dropdown-{{ ai_gen_id }} {
    opacity: 1; visibility: visible; transform: translateY(0);
  }

  .ai-header-dropdown-{{ ai_gen_id }} {
    position: absolute; top: 100%; left: 0;
    background: {{ section.settings.dropdown_bg_color }};
    border: 1px solid {{ section.settings.border_color }};
    border-radius: 8px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.12);
    min-width: 200px;
    opacity: 0; visibility: hidden; transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 1000; overflow: hidden;
  }

  .ai-header-dropdown-link-{{ ai_gen_id }} {
    display: block; padding: 12px 20px;
    color: {{ section.settings.dropdown_text_color }};
    text-decoration: none;
    font-size: {{ section.settings.nav_text_size }}px;
    font-weight: {{ section.settings.nav_text_weight }};
    font-family: {{ section.settings.desktop_font.family }}, {{ section.settings.desktop_font.fallback_families }};
    transition: all 0.3s ease;
    border-bottom: 1px solid {{ section.settings.dropdown_border_color }};
  }
  .ai-header-dropdown-link-{{ ai_gen_id }}:last-child { border-bottom: none; }
  .ai-header-dropdown-link-{{ ai_gen_id }}:hover {
    background-color: {{ section.settings.dropdown_hover_bg }};
    color: {{ section.settings.dropdown_hover_text }};
    padding-left: 24px;
  }

  .ai-header-dropdown-sublink-{{ ai_gen_id }} {
    display: block; padding: 8px 20px 8px 40px;
    color: {{ section.settings.dropdown_text_color }};
    text-decoration: none;
    font-size: {{ section.settings.nav_text_size | minus: 1 }}px;
    font-weight: {{ section.settings.nav_text_weight }};
    font-family: {{ section.settings.desktop_font.family }}, {{ section.settings.desktop_font.fallback_families }};
    transition: all 0.3s ease;
    border-bottom: 1px solid {{ section.settings.dropdown_border_color }};
    opacity: 0.8;
  }
  .ai-header-dropdown-sublink-{{ ai_gen_id }}:last-child { border-bottom: none; }
  .ai-header-dropdown-sublink-{{ ai_gen_id }}:hover {
    background-color: {{ section.settings.dropdown_hover_bg }};
    color: {{ section.settings.dropdown_hover_text }};
    padding-left: 44px; opacity: 1;
  }

  .ai-header-actions-{{ ai_gen_id }} {
    display: flex; align-items: center; gap: {{ section.settings.actions_spacing }}px;
  }

  .ai-header-search-{{ ai_gen_id }} { position: relative; }
  .ai-header-search-toggle-{{ ai_gen_id }} {
    background: none; border: none; color: {{ section.settings.text_color }};
    cursor: pointer; padding: {{ section.settings.icon_padding }}px;
    display: flex; align-items: center; justify-content: center;
    border-radius: 50%; transition: all 0.3s ease;
  }
  .ai-header-search-toggle-{{ ai_gen_id }}:hover {
    background-color: rgba(0,0,0,0.1);
    color: {{ section.settings.text_hover_color }};
    transform: scale(1.1);
  }
  .ai-header-search-form-{{ ai_gen_id }} {
    position: absolute; top: 100%; right: 0;
    background: {{ section.settings.background_color }};
    border: 1px solid {{ section.settings.border_color }};
    border-radius: 8px; padding: 16px; min-width: 320px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.12);
    opacity: 0; visibility: hidden; transform: translateY(-10px);
    transition: all 0.3s ease;
  }
  .ai-header-search-form-{{ ai_gen_id }}.active { opacity: 1; visibility: visible; transform: translateY(0); }
  .ai-header-search-input-{{ ai_gen_id }} {
    width: 100%; padding: 12px 16px;
    border: 1px solid {{ section.settings.border_color }};
    border-radius: 6px; font-size: 14px;
    font-family: {{ section.settings.desktop_font.family }}, {{ section.settings.desktop_font.fallback_families }};
    transition: all 0.3s ease;
  }
  .ai-header-search-input-{{ ai_gen_id }}:focus {
    outline: none; border-color: {{ section.settings.text_hover_color }};
    box-shadow: 0 0 0 3px rgba(0,0,0,0.1);
  }

  .ai-header-account-link-{{ ai_gen_id }},
  .ai-header-cart-link-{{ ai_gen_id }} {
    color: {{ section.settings.text_color }};
    text-decoration: none;
    padding: {{ section.settings.icon_padding }}px;
    display: flex; align-items: center; justify-content: center;
    border-radius: 50%; transition: all 0.3s ease;
  }
  .ai-header-account-link-{{ ai_gen_id }}:hover,
  .ai-header-cart-link-{{ ai_gen_id }}:hover {
    color: {{ section.settings.text_hover_color }};
    background-color: rgba(0,0,0,0.1);
    transform: scale(1.1);
  }

  .ai-header-cart-link-{{ ai_gen_id }} { position: relative; }
  .ai-header-cart-count-{{ ai_gen_id }} {
    position: absolute; top: 0; right: 0;
    background: {{ section.settings.cart_count_bg }};
    color: {{ section.settings.cart_count_text }};
    border-radius: 50%; width: 18px; height: 18px;
    display: flex; align-items: center; justify-content: center;
    font-size: 12px; font-weight: 600;
  }
  .ai-header-burger-icon-{{ ai_gen_id }}{
    width:24px;
    height:18px;
    position: relative;   /* this is the key */
    transition: .5s ease-in-out;
    cursor: pointer;
  }
  .ai-header-burger-icon-{{ ai_gen_id }} span {
    display: block; position: absolute; height: 2px; width: 100%;
    background: {{ section.settings.text_color }}; border-radius: 2px; left: 0; transition: 0.25s ease-in-out;
  }
  .ai-header-burger-icon-{{ ai_gen_id }} span:nth-child(1) { top: 0; transform-origin: left center; }
  .ai-header-burger-icon-{{ ai_gen_id }} span:nth-child(2) { top: 8px; transform-origin: left center; }
  .ai-header-burger-icon-{{ ai_gen_id }} span:nth-child(3) { top: 16px; transform-origin: left center; }

  .ai-header-mobile-menu-{{ ai_gen_id }} {
    position: fixed; top: 0; left: 0; width: 100%; height: 100vh;
    background: {{ section.settings.mobile_bg_color }};
    z-index: 9999; opacity: 0; visibility: hidden; transition: all 0.4s ease; overflow-y: auto;
  }
  .ai-header-mobile-menu-{{ ai_gen_id }}.active { opacity: 1; visibility: visible; }

  /* Make items align from the top so per-side offsets work */
  .ai-header-mobile-header-{{ ai_gen_id }}{
    display:flex;
    align-items:flex-start;            /* was center */
    padding: 20px;
    border-bottom: 1px solid {{ section.settings.mobile_border_color }};
    position: sticky;
    top: 0;
    background: {{ section.settings.mobile_bg_color }};
    z-index: 1001;
  }

  /* Make items align from the top so per-side offsets work */
  .ai-header-mobile-header-{{ ai_gen_id }}{
    display:flex;
    align-items:flex-start;            /* was center */
    padding: 20px;
    border-bottom: 1px solid {{ section.settings.mobile_border_color }};
    position: sticky;
    top: 0;
    background: {{ section.settings.mobile_bg_color }};
    z-index: 1001;
  }

  .ai-header-mobile-logo-image-{{ ai_gen_id }} { max-width: {{ section.settings.logo_width | times: 0.8 | round }}px; height: auto; }
  .ai-header-mobile-logo-text-{{ ai_gen_id }} {
    font-size: {{ section.settings.logo_text_size | times: 0.9 | round }}px;
    font-weight: {{ section.settings.logo_text_weight }};
    font-family: {{ section.settings.mobile_font.family }}, {{ section.settings.mobile_font.fallback_families }};
    margin: 0;
  }
  /* Logo offset inside the sticky header – uses the schema knob */
  .ai-header-mobile-logo-{{ ai_gen_id }}{
    margin-top: calc({{ section.settings.mobile_logo_padding_top }}px + env(safe-area-inset-top));
  }

  /* BASE — hidden on desktop */
  .ai-header-mobile-toggle-{{ ai_gen_id }}{
    display:none;
    align-items:center; justify-content:center;
    width:44px; height:44px; padding:{{ section.settings.icon_padding }}px;
    border:0; background:transparent; border-radius:4px; cursor:pointer;
    color: {{ section.settings.text_color }};
    transition: all .25s ease;
    position: relative;
    z-index: 10050;
  }
  .ai-header-mobile-toggle-{{ ai_gen_id }}:hover{ background: rgba(0,0,0,.06); }

  /* ACTIVE — position comes from schema knob */
  .ai-header-mobile-toggle-{{ ai_gen_id }}.active{
    position: fixed;
    top: calc({{ section.settings.mobile_close_padding_top }}px + env(safe-area-inset-top));
    right: 16px;
    z-index: 10050;
  }

  /* X animation (keep one copy only) */
  .ai-header-mobile-toggle-{{ ai_gen_id }}.active .ai-header-burger-icon-{{ ai_gen_id }} span:nth-child(1){ transform: translateY(8px) rotate(45deg); }
  .ai-header-mobile-toggle-{{ ai_gen_id }}.active .ai-header-burger-icon-{{ ai_gen_id }} span:nth-child(2){ opacity: 0; }
  .ai-header-mobile-toggle-{{ ai_gen_id }}.active .ai-header-burger-icon-{{ ai_gen_id }} span:nth-child(3){ transform: translateY(-8px) rotate(-45deg); }

  /* Show only on mobile */
  @media screen and (max-width: 990px){
    .ai-header-mobile-toggle-{{ ai_gen_id }}{ display:flex; }
  }
  /* “X” position when the menu is open – uses the schema knob */
  .ai-header-mobile-toggle-{{ ai_gen_id }}.active{
    position: fixed;
    top: calc({{ section.settings.mobile_close_padding_top }}px + env(safe-area-inset-top));
    right: 16px;
    z-index: 10050;
  }

  .ai-header-mobile-content-{{ ai_gen_id }} {
    padding: 40px 20px; display: flex; flex-direction: column; gap: 24px; animation: ai-header-slide-in-{{ ai_gen_id }} 0.4s ease;
  }
  @keyframes ai-header-slide-in-{{ ai_gen_id }} { from { transform: translateY(30px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }

  .ai-header-mobile-nav-{{ ai_gen_id }} { list-style: none; margin: 0; padding: 0; display: flex; flex-direction: column; gap: 0; }
  .ai-header-mobile-nav-item-{{ ai_gen_id }} { border-bottom: 1px solid {{ section.settings.mobile_border_color }}; }

  .ai-header-mobile-nav-link-{{ ai_gen_id }} {
    text-decoration: none; color: {{ section.settings.mobile_text_color }};
    font-size: {{ section.settings.nav_text_size }}px; font-weight: {{ section.settings.nav_text_weight }};
    font-family: {{ section.settings.mobile_font.family }}, {{ section.settings.mobile_font.fallback_families }};
    padding: {{ section.settings.mobile_menu_padding }}px 0; display: block; transition: all 0.3s ease; position: relative;
  }
  .ai-header-mobile-nav-link-{{ ai_gen_id }}:hover { color: {{ section.settings.text_hover_color }}; padding-left: 16px; }
  .ai-header-mobile-nav-link-{{ ai_gen_id }}::before {
    content: ''; position: absolute; left: 0; top: 50%; width: 0; height: 2px;
    background-color: {{ section.settings.text_hover_color }}; transition: width 0.3s ease; transform: translateY(-50%);
  }
  .ai-header-mobile-nav-link-{{ ai_gen_id }}:hover::before { width: 12px; }

  .ai-header-mobile-nav-toggle-{{ ai_gen_id }} {
    background: none; border: none; color: {{ section.settings.mobile_text_color }};
    cursor: pointer; padding: {{ section.settings.mobile_menu_padding }}px 0;
    display: flex; align-items: center; justify-content: space-between; width: 100%;
    font-size: {{ section.settings.nav_text_size }}px; font-weight: {{ section.settings.nav_text_weight }};
    font-family: {{ section.settings.mobile_font.family }}, {{ section.settings.mobile_font.fallback_families }};
    text-align: left; transition: all 0.3s ease; position: relative;
  }
  .ai-header-mobile-nav-toggle-{{ ai_gen_id }}:hover { color: {{ section.settings.text_hover_color }}; padding-left: 16px; }
  .ai-header-mobile-nav-toggle-{{ ai_gen_id }}::before {
    content: ''; position: absolute; left: 0; top: 50%; width: 0; height: 2px;
    background-color: {{ section.settings.text_hover_color }}; transition: width 0.3s ease; transform: translateY(-50%);
  }
  .ai-header-mobile-nav-toggle-{{ ai_gen_id }}:hover::before { width: 12px; }
  .ai-header-mobile-nav-arrow-{{ ai_gen_id }} { transition: transform 0.3s ease; flex-shrink: 0; }
  .ai-header-mobile-nav-toggle-{{ ai_gen_id }}.active .ai-header-mobile-nav-arrow-{{ ai_gen_id }} { transform: rotate(180deg); }

  .ai-header-mobile-dropdown-{{ ai_gen_id }} { padding-left: 20px; max-height: 0; overflow: hidden; transition: all 0.3s ease; }
  .ai-header-mobile-dropdown-{{ ai_gen_id }}.active { max-height: 1000px; padding-top: 8px; padding-bottom: 8px; }

  .ai-header-mobile-dropdown-link-{{ ai_gen_id }} {
    display: block; padding: 12px 0; color: {{ section.settings.mobile_text_color }};
    text-decoration: none;
    font-size: {{ section.settings.nav_text_size }}px; font-weight: {{ section.settings.nav_text_weight }};
    font-family: {{ section.settings.mobile_font.family }}, {{ section.settings.mobile_font.fallback_families }};
    opacity: 0.8; transition: all 0.3s ease; border-bottom: none;
  }
  .ai-header-mobile-dropdown-link-{{ ai_gen_id }}:hover { opacity: 1; color: {{ section.settings.text_hover_color }}; padding-left: 12px; }

  .ai-header-mobile-dropdown-sublink-{{ ai_gen_id }} {
    display: block; padding: 8px 0 8px 20px; color: {{ section.settings.mobile_text_color }};
    text-decoration: none; font-size: {{ section.settings.nav_text_size | minus: 1 }}px; font-weight: {{ section.settings.nav_text_weight }};
    font-family: {{ section.settings.mobile_font.family }}, {{ section.settings.mobile_font.fallback_families }};
    opacity: 0.7; transition: all 0.3s ease; border-bottom: none;
  }
  .ai-header-mobile-dropdown-sublink-{{ ai_gen_id }}:hover { opacity: 1; color: {{ section.settings.text_hover_color }}; padding-left: 24px; }

  .ai-header-mobile-actions-{{ ai_gen_id }} { display: flex; flex-direction: column; gap: 20px; padding-top: 24px; }
  .ai-header-mobile-search-{{ ai_gen_id }} {
    width: 100%; padding: 16px 20px; border: 1px solid {{ section.settings.mobile_border_color }};
    border-radius: 8px; font-size: 16px;
    font-family: {{ section.settings.mobile_font.family }}, {{ section.settings.mobile_font.fallback_families }};
    background: {{ section.settings.mobile_bg_color }}; color: {{ section.settings.mobile_text_color }};
    transition: all 0.3s ease;
  }
  .ai-header-mobile-search-{{ ai_gen_id }}:focus { outline: none; border-color: {{ section.settings.text_hover_color }}; box-shadow: 0 0 0 3px rgba(0,0,0,0.1); }

  .ai-header-mobile-action-links-{{ ai_gen_id }} { display: flex; gap: 24px; }
  .ai-header-mobile-action-link-{{ ai_gen_id }} {
    color: {{ section.settings.mobile_text_color }}; text-decoration: none; display: flex; align-items: center; gap: 8px;
    font-size: 16px; font-family: {{ section.settings.mobile_font.family }}, {{ section.settings.mobile_font.fallback_families }};
    padding: 12px 0; transition: all 0.3s ease;
  }
  .ai-header-mobile-action-link-{{ ai_gen_id }}:hover { color: {{ section.settings.text_hover_color }}; transform: translateY(-2px); }

  @media screen and (max-width: 990px) {
    .ai-header-nav-{{ ai_gen_id }} { display: none; }
    .ai-header-search-{{ ai_gen_id }} { display: none; }
    .ai-header-mobile-toggle-{{ ai_gen_id }} { display: flex; }
  }

  @media screen and (max-width: 749px) {
    .ai-header-container-{{ ai_gen_id }} { padding: 0 16px; }
    .ai-header-logo-image-{{ ai_gen_id }} { max-width: {{ section.settings.logo_width | times: 0.8 | round }}px; }
    .ai-header-actions-{{ ai_gen_id }} { gap: 8px; }
    .ai-header-mobile-content-{{ ai_gen_id }} { padding: 40px 16px; }
  }
{% endstyle %}

<header-component-{{ ai_gen_id }} class="ai-header-{{ ai_gen_id }}" {{ section.shopify_attributes }}>
  <div class="ai-header-container-{{ ai_gen_id }}">
    <a href="/" class="ai-header-logo-{{ ai_gen_id }}">
      {% if section.settings.logo %}
        <img
          src="{{ section.settings.logo | image_url: width: 400 }}"
          alt="{{ shop.name }}"
          class="ai-header-logo-image-{{ ai_gen_id }}"
          width="{{ section.settings.logo_width | round }}"
          loading="lazy"
        >
      {% elsif section.settings.logo_text != blank %}
        <h1 class="ai-header-logo-text-{{ ai_gen_id }}">{{ section.settings.logo_text }}</h1>
      {% else %}
        <h1 class="ai-header-logo-text-{{ ai_gen_id }}">{{ shop.name }}</h1>
      {% endif %}
    </a>

    <nav class="ai-header-nav-{{ ai_gen_id }}" role="navigation">
      {% for link in section.settings.menu.links %}
        <div class="ai-header-nav-item-{{ ai_gen_id }}">
          <a href="{{ link.url }}" class="ai-header-nav-link-{{ ai_gen_id }}">{{ link.title }}</a>
          {% if link.links.size > 0 %}
            <div class="ai-header-dropdown-{{ ai_gen_id }}">
              {% for child_link in link.links %}
                <a href="{{ child_link.url }}" class="ai-header-dropdown-link-{{ ai_gen_id }}">{{ child_link.title }}</a>
                {% if child_link.links.size > 0 %}
                  {% for grandchild_link in child_link.links %}
                    <a href="{{ grandchild_link.url }}" class="ai-header-dropdown-sublink-{{ ai_gen_id }}">{{ grandchild_link.title }}</a>
                  {% endfor %}
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </nav>

    <div class="ai-header-actions-{{ ai_gen_id }}">
      {% if section.settings.show_search %}
        <div class="ai-header-search-{{ ai_gen_id }}">
          <button class="ai-header-search-toggle-{{ ai_gen_id }}" aria-label="Search">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
          </button>
          <form action="{{ routes.search_url }}" method="get" class="ai-header-search-form-{{ ai_gen_id }}">
            <input type="search" name="q" placeholder="Search products..." class="ai-header-search-input-{{ ai_gen_id }}" autocomplete="off">
          </form>
        </div>
      {% endif %}

      {% if section.settings.show_account %}
        <a href="{{ routes.account_url }}" class="ai-header-account-link-{{ ai_gen_id }}" aria-label="Account">
          {% if section.settings.account_icon == 'user' %}
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
          {% else %}
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="3"></circle>
