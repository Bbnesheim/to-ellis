{% comment %}
  Renders a standard dropdown style menu for the header.
  Usage: {% render 'header-dropdown-menu' %}
{% endcomment %}

<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      <li>
        {%- if link.links != blank -%}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset"
              >
                <span{% if link.child_active %} class="header__active-menu-item"{% endif %}>
                  {{- link.title | escape -}}
                </span>
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </summary>

              <div
                id="HeaderMenu-MenuList-{{ forloop.index }}"
                class="header__submenu motion-reduce"
                tabindex="-1"
              >
                <ul class="list-menu list-menu--disclosure" role="list" tabindex="-1">
                  {%- for childlink in link.links -%}
                    <li>
                      {%- if childlink.links != blank -%}
                        <details>
                          <summary class="header__menu-item list-menu__item link">
                            <span{% if childlink.child_active %} class="header__active-menu-item"{% endif %}>
                              {{- childlink.title | escape -}}
                            </span>
                            {{- 'icon-caret.svg' | inline_asset_content -}}
                          </summary>

                          <ul class="list-menu list-menu--disclosure" role="list">
                            {%- for grandchildlink in childlink.links -%}
                              <li>
                                <a href="{{ grandchildlink.url }}"
                                   class="header__menu-item list-menu__item link link--text focus-inset">
                                  {{- grandchildlink.title | escape -}}
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </details>
                      {%- else -%}
                        <a href="{{ childlink.url }}"
                           class="header__menu-item list-menu__item link link--text focus-inset">
                          {{- childlink.title | escape -}}
                        </a>
                      {%- endif -%}
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            </details>
          </header-menu>
        {%- else -%}
          <a href="{{ link.url }}"
             class="header__menu-item list-menu__item link link--text focus-inset">
            <span{% if link.current %} class="header__active-menu-item"{% endif %}>
              {{- link.title | escape -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
